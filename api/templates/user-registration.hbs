<form action="{{formAction}}" method="post">
  {{#if error}}
    <div class="validation-errors-list">
      {{#each validationErrorMessages.client_id}}
        <div class='validation-errors'>{{this}}</div>
      {{/each}}
      {{#each validationErrorMessages.redirect_uri}}
        <div class='validation-errors'>{{this}}</div>
      {{/each}}
      {{#each validationErrorMessages.scope}}
        <div class='validation-errors'>{{this}}</div>
      {{/each}}
      {{#each validationErrorMessages.response_type}}
        <div class='validation-errors'>{{this}}</div>
      {{/each}}
    </div>
  {{/if}}

  <input
    type="text"
    name="email"
    placeholder="Email"
    value="{{email}}"
  />
  {{#if error}}
    <div class="validation-errors-list">
      {{#each validationErrorMessages.email}}
        <div class="validation-error">{{this}}</div>
      {{/each}}
    </div>
  {{/if}}

  <input
    type="password"
    name="password"
    placeholder="Password"
  />
  {{#if error}}
    <div class="validation-errors-list">
      {{#each validationErrorMessages.password}}
        <div class="validation-error">{{this}}</div>
      {{/each}}
    </div>
  {{/if}}

  <input
    type="password"
    name="pass2"
    placeholder = "Re-enter Password"
  />
  {{#if error}}
    <div class="validation-errors-list">
      {{#each validationErrorMessages.pass2}}
        <div class="validation-error">{{this}}</div>
      {{/each}}
    </div>
  {{/if}}

  <button type="submit" class="login login-submit">Register</button>
</form>
