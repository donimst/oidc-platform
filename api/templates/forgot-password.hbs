<form action="{{formAction}}" method="post">
  {{#if error}}
    <div class="alerts">
      {{#each validationErrorMessages.client_id}}
        <div class='alert alert--error'>{{this}}</div>
      {{/each}}
      {{#each validationErrorMessages.redirect_uri}}
        <div class='alert alert--error'>{{this}}</div>
      {{/each}}
      {{#each validationErrorMessages.scope}}
        <div class='alert alert--error'>{{this}}</div>
      {{/each}}
      {{#each validationErrorMessages.response_type}}
        <div class='alert alert--error'>{{this}}</div>
      {{/each}}
    </div>
  {{/if}}

  <div class="input-scaffold">
    <label>
      <span class="input-scaffold__label">Email</span>
      <input
        class="input-scaffold__input"
        type="text"
        name="email"
      />
    </label>
    {{#if error}}
      <div class="input-scaffold__validation">
        {{#each validationErrorMessages.email}}
          <div class="validation-error">{{this}}</div>
        {{/each}}
      </div>
    {{/if}}
  </div>

  {{#if linkUrl}}<a href="{{linkUrl}}">Login</a>{{/if}}
  <button type="submit">Submit</button>
</form>
